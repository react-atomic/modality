{
  "version": "0.1.0",
  "name": "modality-safe",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-atomic/modality"
  },
  "homepage": "https://github.com/react-atomic/modality/tree/main/modality-security",
  "description": "Advanced security scanner that detects API key leaks and sensitive information in source code. Scans TypeScript, JavaScript, Markdown, and configuration files for AWS keys, OpenAI tokens, GitHub/GitLab PATs, Slack/Discord tokens, JWT tokens, and other credentials with intelligent whitelist filtering to reduce false positives.",
  "keywords": [
    "security",
    "api-key",
    "credential-scanner",
    "leak-detection",
    "secret-detection",
    "security-audit",
    "vulnerability-scanner",
    "code-security",
    "aws-keys",
    "jwt-tokens",
    "github-tokens",
    "openai-keys",
    "static-analysis",
    "devsecops"
  ],
  "author": "Hill <hill@kimo.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "typescript": "^5.9.2",
    "zod": "^3.25.76"
  },
  "exports": {
    "types": "./dist/types/index.d.ts",
    "require": "./dist/index.js",
    "import": "./dist/index.js"
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "scripts": {
    "update-compile-sh": "yo reshow:compile-sh",
    "build:clean": "find ./dist -name '*.*' | xargs rm -rf",
    "build:types": "bun tsc -p ./",
    "build:src": "bun build src/index.ts --outdir dist",
    "build": "bun run build:clean && bun run build:types && bun run build:src",
    "dev": "bunx concurrently 'bun --watch tsc  -p ./' 'bun build:src -- --watch --sourcemap=inline'",
    "test": "bun test",
    "prepublishOnly": "npm run build && npm run test"
  },
  "files": ["package.json", "README.md", "dist"]
}
