{
  "compilerOptions": {
    "module": "none",
    "target": "ESNext",
    "lib": ["ES2022", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "types": ["@types/browser-or-node", "@types/bun"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
