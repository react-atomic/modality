    "build:src": "bun build src/index.ts --outdir dist",
    "build": "bun run build:clean && bun run build:src && bun run build:types",
    "test": "bun test",
    "prepublishOnly": "npm run build && npm run test"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
